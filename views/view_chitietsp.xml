<odoo>
    <record id="view_chitietsp" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
            <!-- đường dẫn của đến trang product odoo -->
                <xpath expr="//sheet/notebook/page[1]/group/group" position="inside"> 
                    <group>
                        <field name="square" string="Diện tích"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <field name="address" string="Địa chỉ"/>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>